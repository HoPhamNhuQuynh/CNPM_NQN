{
  "manifest_version": 3,
  "name": "Tiki Fake Checker",
  "version": "1.2",
  "description": "Phân tích sản phẩm Tiki (lấy full info / review count / ảnh feedback) để phục vụ phân tích hàng thật/giả.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://tiki.vn/*",
    "https://api.tiki.vn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://tiki.vn/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tiki Fake Checker"
  }
}
